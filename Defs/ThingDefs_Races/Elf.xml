<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="HumanRace">
    <defName>ElfRace</defName>
    <label>Elf</label>
    <description>An elf. Elves can live for centuries without suffering the ravages of age, frequently leading to notions of superiority. Their long lives allow them to master many skills, but they are slow to acquire new ones. Many elves prefer being in nature to being indoors.</description>
    <race>
      <lifeExpectancy>750</lifeExpectancy>
      <hediffGiverSets>
        <li>ElfRace_HediffGiverSet</li>
        <li>OrganicStandard</li>
        <li>Human</li>
      </hediffGiverSets>
    </race>
    <alienRace>
      <generalSettings>
        <canLayDown>false</canLayDown>
        <allowHumanBios>true</allowHumanBios>
        <minAgeForAdulthood>100</minAgeForAdulthood>
        <humanRecipeImport>true</humanRecipeImport>
        <forcedRaceTraitEntries>
          <li>
            <defName>SpeedOffset</defName>
            <degree>1</degree>
            <chance>5</chance>
          </li>
          <li>
            <defName>Beauty</defName>
            <degree>1</degree>
            <chance>10</chance>
          </li>
          <li>
            <defName>Abrasive</defName>
            <chance>20</chance>
          </li>
          <li>
            <defName>NightOwl</defName>
            <chance>10</chance>
          </li>
        </forcedRaceTraitEntries>
        <disallowedTraits>
          <li>
            <defName>AnnoyingVoice</defName>
          </li>
          <li>
            <defName>CreepyBreathing</defName>
          </li>
        </disallowedTraits>
        <alienPartGenerator>
          <customDrawSize>(0.85, 1.1)</customDrawSize>
          <customHeadDrawSize>(1.0, 1.0)</customHeadDrawSize>
          <customPortraitDrawSize>(0.85, 1.1)</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(1.0, 1.0)</customPortraitHeadDrawSize>
          <aliencrowntypes>
            <li>Average_Normal</li>
            <li>Average_Wide</li>
            <li>Average_Pointy</li>
            <li>Narrow_Normal</li>
            <li>Narrow_Pointy</li>
            <li>Narrow_Wide</li>
          </aliencrowntypes>
          <alienbodytypes>
            <li>Thin</li>
          </alienbodytypes>
          <bodyAddons>
            <li>
              <path>Elf/ears/Ears</path>
              <inFrontOfBody>true</inFrontOfBody>
              <bodyPart>Head</bodyPart>
              <colorChannel>skin</colorChannel>
              <hiddenUnderApparelFor>
                <li>FullHead</li>
              </hiddenUnderApparelFor>
              <!--<layerOffset>-0.275</layerOffset>-->
              <offsets>
                <south>
                  <bodyTypes>
                    <Male>(-0.43,0.5)</Male>
                    <Female>(-0.43,0.5)</Female>
                    <Fat>(-0.43,0.5)</Fat>
                    <Thin>(-0.43,0.5)</Thin>
                  </bodyTypes>
                  <crownTypes>
                    <Normal_Average>(-0.43,0.5)</Normal_Average>
                  </crownTypes>
                </south>
                <north>
                  <bodyTypes>
                    <Male>(0,0.9)</Male>
                    <Female>(0,0.9)</Female>
                    <Fat>(0,0.9)</Fat>
                    <Thin>(0,0.9)</Thin>
                  </bodyTypes>
                  <crownTypes>
                    <Normal_Average>(0,0.9)</Normal_Average>
                  </crownTypes>
                </north>
                <east>
                  <bodyTypes>
                    <Male>(-0.43,0.5)</Male>
                    <Female>(-0.43,0.5)</Female>
                    <Fat>(-0.43,0.5)</Fat>
                    <Thin>(-0.43,0.5)</Thin>
                  </bodyTypes>
                  <crownTypes>
                    <Normal_Average>(-0.43,0.5)</Normal_Average>
                  </crownTypes>
                </east>
              </offsets>
            </li>
          </bodyAddons>
        </alienPartGenerator>
      </generalSettings>
    <hairSettings>
      <hasHair>true</hasHair>
      <getsGreyAt>700</getsGreyAt>
      <hairTags>
        <li>Rural</li>
        <li>Urban</li>
        <li>Royalty</li>
      </hairTags>
    </hairSettings>
    </alienRace>
    <statBases>
      <MoveSpeed>4.8</MoveSpeed>
      <RestRateMultiplier>1.3</RestRateMultiplier>
      <MiningSpeed>0.75</MiningSpeed>
      <PawnBeauty>1</PawnBeauty>
      <ConstructionSpeed>0.85</ConstructionSpeed>
      <PlantHarvestYield>1.25</PlantHarvestYield>
      <!--<GlobalLearningFactor>0.75</GlobalLearningFactor>-->
      <PsychicSensitivity>1.30</PsychicSensitivity>
    </statBases>
  </AlienRace.ThingDef_AlienRace>
</Defs>