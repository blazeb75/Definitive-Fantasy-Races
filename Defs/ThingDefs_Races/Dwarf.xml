<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AlienRace.ThingDef_AlienRace ParentName="HumanRace">
    <defName>DwarfRace</defName>
    <label>Dwarf</label>
    <description>A dwarf, shorter and broader than a human, well adapted for living safely underground.</description>
    <race>
      <lifeExpectancy>350</lifeExpectancy>
    </race>
    <alienRace>
      <generalSettings>
        <maleGenderProbability>0.66</maleGenderProbability>
        <allowHumanBios>true</allowHumanBios>
        <minAgeForAdulthood>50</minAgeForAdulthood>
        <humanRecipeImport>true</humanRecipeImport>
        <forcedRaceTraitEntries>
          <li>
            <defName>Undergrounder</defName>
            <chance>90</chance>
          </li>
          <li>
            <defName>Tough</defName>
            <chance>15</chance>
          </li>
          <li>
            <defName>Industriousness</defName>
            <degree>1</degree>
            <chance>10</chance>
          </li>
          <li>
            <defName>Nerves</defName>
            <degree>1</degree>
            <chance>10</chance>
          </li>
        </forcedRaceTraitEntries>
        <alienPartGenerator>
          <customDrawSize>1.1, 0.8</customDrawSize>
          <customHeadDrawSize>(1.1 , 0.9)</customHeadDrawSize>
          <customPortraitDrawSize>1.1, 0.6</customPortraitDrawSize>
          <customPortraitHeadDrawSize>(1.1 , 0.9)</customPortraitHeadDrawSize>
          <headOffset>(0.00, -0.08)</headOffset>
        </alienPartGenerator>
      </generalSettings>
      <thoughtSettings>
        <cannotReceiveThoughts>
          <li>AteInsectMeatAsIngredient</li>
        </cannotReceiveThoughts>
      </thoughtSettings>
      <hairSettings>
        <hasHair>true</hasHair>
        <getsGreyAt>250</getsGreyAt>
        <hairTags>
          <li>dwarf</li>
        </hairTags>
      </hairSettings>
    </alienRace>
    <statBases>
      <ToxicSensitivity>0.6</ToxicSensitivity>
      <MiningSpeed>1.2</MiningSpeed>
      <GeneralLaborSpeed>1.2</GeneralLaborSpeed>
      <SmoothingSpeed>1.5</SmoothingSpeed>
      <SmeltingSpeed>1.5</SmeltingSpeed>
      <PsychicSensitivity>0.6</PsychicSensitivity>
      <MoveSpeed>4.4</MoveSpeed>
    </statBases>
  </AlienRace.ThingDef_AlienRace>
</Defs>